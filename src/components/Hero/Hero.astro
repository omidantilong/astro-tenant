---
interface Props {
  data: { fields: Hero }
}

const { heroHeading, heroBody, link, image } = Astro.props.data.fields
//console.log(Astro.props.data)
---

<div class="cws-hero-container">
  <div class="wrap flex">
    <div class="pr-8">
      <h1>{heroHeading}</h1>
      <p set:html={heroBody} />
      {link && "url" in link && <a href={link.url}>{link.title}</a>}
    </div>
    <!--@ts-expect-error -->
    <img class="max-w-2xl" src=`${image.fields.file.url}?q=60&fm=webp` />
  </div>
</div>
