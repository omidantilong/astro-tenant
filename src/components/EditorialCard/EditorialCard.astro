---
import type { EditorialCard } from "../../../types/tenant"

interface Props {
  data: EditorialCard
}

import LinkWrapper from "../LinkWrapper/LinkWrapper.astro"

import { parse } from "@omidantilong/engine/contentful"

const { cardHeading, cardBody, link } = Astro.props.data

const parsed = await parse(cardBody)
---

<article class="cws-editorial-card">
  <LinkWrapper data={link}>
    <h3>{cardHeading}</h3>
    <p set:html={parsed} />
  </LinkWrapper>
</article>

